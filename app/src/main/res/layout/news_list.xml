<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/newsId"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/newsWeb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hamro Guide"
                android:id="@+id/newsHead"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hamro Guide"
                android:id="@+id/newsContent"
                android:layout_below="@+id/newsHead"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="...Read More"
                android:id="@+id/newsReadmore"
                android:layout_below="@+id/newsContent"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageLayout"
                android:paddingTop="10dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_below="@id/newsReadmore">

                <ImageView
                    android:id="@+id/imagefirst"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/imagethird"
                    android:padding="5dp"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/imagesecond"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="25dp"
                    android:padding="5dp"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/imagethird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="14dp"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:src="@mipmap/ic_launcher" />

            </RelativeLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/dateIcon"
                android:src="@drawable/dateicon"
                android:layout_below="@+id/imageLayout"
                android:paddingLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newsDate"
                android:text="2010-10-10"
                android:layout_toRightOf="@+id/dateIcon"
                android:layout_below="@+id/imageLayout"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/writerIcon"
                android:src="@drawable/writer"
                android:layout_below="@+id/newsDate"
                android:paddingLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newsWriter"
                android:text="Ram Rai"
                android:layout_toRightOf="@+id/writerIcon"
                android:layout_below="@+id/newsDate"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>