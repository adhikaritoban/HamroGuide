<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/placesLat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/placesId"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/placesLon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hamro Guide"
                android:id="@+id/placeName"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/destinationmarker"
                android:id="@+id/locationImg"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/placeName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hamro Guide"
                android:layout_below="@+id/placeName"
                android:layout_toRightOf="@+id/locationImg"
                android:id="@+id/placeAddress"
                android:textStyle="italic|bold"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/map"
                android:id="@+id/navPlaces"
                android:paddingRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/placeName"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:padding="9dp"
                android:layout_below="@+id/placeAddress"
                android:id="@+id/placeImg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeImg"
                android:id="@+id/placeDesc"
                android:textStyle="normal"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:padding="9dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>