<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/agenciesLat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/agenciesId"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/agenciesLon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hamro Guide"
                android:id="@+id/agenciesName"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hamro Guide"
                android:layout_below="@+id/agenciesName"
                android:id="@+id/agenciesAddress"
                android:textStyle="italic"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agenciesCon"
                android:text="98125"
                android:layout_below="@+id/agenciesAddress"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone"
                android:id="@+id/agenciesPhone"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/agenciesCon"
                android:layout_below="@id/agenciesAddress"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agenciesSms"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_toRightOf="@+id/agenciesPhone"
                android:layout_below="@id/agenciesAddress"
                android:src="@drawable/sms"/>


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/agenciesImage"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/map"
                android:id="@+id/navAgencies"
                android:paddingRight="10dp"
                android:layout_below="@+id/agenciesAddress"
                android:layout_toLeftOf="@+id/agenciesImage"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>